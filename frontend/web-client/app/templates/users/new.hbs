<div class="container">
  <h3>Create User</h3>
  <div>
    <div class="form-group">
      <label for="email">Email</label>
      {{input
        type="text"
        class="form-control"
        id="email"
        placeholder="user@domain.tld"
        value=model.email
        required=true
      }}
    </div>
    <div class="form-group">
      <label for="name">User's Name</label>
      {{input
        type="text"
        class="form-control"
        id="name"
        placeholder="Jimmy Dean"
        value=model.name
        required=true
      }}
    </div>
    <div class="form-group">
      <label for="password">User's Password</label>
      {{input
        type="password"
        class="form-control"
        id="password"
        placeholder="Jimmy Dean"
        value=model.password
        required=true
      }}
    </div>
    <div class="form-group">
      <label for="caloriesPerDay">Calories per Day</label>
      {{input
        type="number"
        class="form-control"
        id="caloriesPerDay"
        placeholder="Jimmy Dean"
        value=model.caloriesPerDay
        required=false
      }}
    </div>
  </div>
  <button class="btn btn-primary" {{action "saveUser" model}}>Save "{{model.name}}"</button>
</div>
