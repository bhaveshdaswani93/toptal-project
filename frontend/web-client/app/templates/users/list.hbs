<div class="container">
  <h3>User Admin Page</h3>

  <ul class="list-group">
    <li class="list-group-item">
      {{!-- {{#link-to "meals.new"}}Add new meal{{/link-to}} | {{#link-to "meals.search"}}Search Meals{{/link-to}} --}}
      Add new User
    </li>
    {{#each model.users as |userItem|}}
      <li class="list-group-item">
        <p>userId: {{userItem.id}}</p>
        <p>email: {{userItem.email}}</p>
        <p>name: {{userItem.name}}</p>
        {{#if userItem.active}}
          <p>Status: Active</p>
        {{else}}
          <p>Status: Deleted</p>
        {{/if}}
        {{#link-to "users.edit" userItem.id}}
          <button class="btn btn-primary">Edit</button>
        {{/link-to}}
        <button class="btn btn-danger" {{action "deleteUser" userItem.id}}>Delete</button>
      </li>
    {{/each}}
  </ul>
</div>