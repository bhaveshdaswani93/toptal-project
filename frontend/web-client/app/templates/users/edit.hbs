<div class="container">
  <h3>Edit User#{{model.id}}</h3>
  <div>
    <div class="form-group">
      <label for="email">Email</label>
      {{input
        type="text"
        class="form-control"
        id="email"
        placeholder="user@domain.tld"
        value=model.email
        required=True
      }}
    </div>
    <div class="form-group">
      <label for="name">User's Name</label>
      {{input
        type="text"
        class="form-control"
        id="name"
        placeholder="Jimmy Dean"
        value=model.name
        required=True
      }}
    </div>
    <div class="form-group">
      <label for="account-status">Status</label>
      {{input
        type="checkbox"
        class="form-control"
        id="account-status"
        checked=model.active
        required=True
      }}
    </div>
  </div>
  <button class="btn btn-primary" {{action "saveUser" model}}>Save "{{model.name}}"</button>
</div>