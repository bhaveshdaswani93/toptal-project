<div class="container">
  <h3>Search Your Meal</h3>
  <div>
    <div class="form-group">
      <label for="start-date">Start Date?</label>
      {{bootstrap-datepicker format='yyyy-mm-dd' value=model.startDate autoclose=true}}
    </div>

    <div class="form-group">
      <label for="end-date">End Date?</label>
      {{bootstrap-datepicker format='yyyy-mm-dd' value=model.endDate autoclose=true}}
    </div>

    <div class="form-group">
      <label for="start-time">Start Time</label>
      {{input
        type="start-time"
        class="form-control"
        id="text"
        placeholder="11:30 AM"
        value=model.startTime
      }}
    </div>

    <div class="form-group">
      <label for="end-time">End Time</label>
      {{input
        type="text"
        class="form-control"
        id="end-time"
        placeholder="12:45 PM"
        value=model.endTime
      }}
    </div>
    <button class="btn btn-primary" {{action 'setSearchParams' model}}>Search</button>
  </div>
</div>