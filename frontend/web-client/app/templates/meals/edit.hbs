<div class="container">
  <h3>Edit Your Meal</h3>
  {{#if overBudget}}
    <h4>You are over your caloric budget! {{caloriesConsumed}} vs {{caloriesForUser}}</h4>
  {{else}}
    <h4 class="btn btn-outline-success">Great job! You only ate {{caloriesConsumed}} kcal</h4>
  {{/if}}
  <div>
    <div class="form-group">
      <label for="text">What did you eat?</label>
      {{input
        type="text"
        class="form-control"
        id="text"
        placeholder="Penne and Sauce"
        value=model.text
        required=True
      }}
    </div>
    <div class="form-group">
      <label for="entry-datetime">
        You ate it at: {{model.userInputtedDatetime}}
        {{!-- {{moment-format model.entryDatetime 'MM-DD-YYYY @ hh:mm A'}} --}}
      </label>
      {{input
        type="text"
        class="form-control"
        id="entry-datetime"
        placeholder="2018-11-15 12:35 PM"
        value=model.userInputtedDatetime
        required=True
      }}
    </div>
    <div class="form-group">
      <label for="calories">How many calories?</label>
      {{input
        type="text"
        class="form-control"
        id="calories"
        placeholder="9001"
        value=model.calories
        required=True
      }}
    </div>
  </div>
  <button class="btn btn-primary" {{action "saveMeal" model}}>Save "{{model.text}}"</button>
</div>