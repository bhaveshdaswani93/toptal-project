<div class="container">
  <h3>Welcome User#{{model.id}}</h3>
  <div>
    <div class="form-group">
      <label for="email">Email</label>
      {{input
        type="text"
        class="form-control"
        id="email"
        placeholder="user@domain.tld"
        value=model.email
        required=true
      }}
    </div>
    <div class="form-group">
      <label for="name">Your Name</label>
      {{input
        type="text"
        class="form-control"
        id="name"
        placeholder="Jimmy Dean"
        value=model.name
        required=true
      }}
    </div>
    <div class="form-group">
      <label for="caloriesPerDay">Calories per Day</label>
      {{input
        type="number"
        class="form-control"
        id="caloriesPerDay"
        placeholder="2000"
        value=model.caloriesPerDay
        required=false
      }}
    </div>
    <div class="form-group form-check">
      {{input
        type="checkbox"
        class="form-check-input"
        id="isAdmin"
        checked=model.isAdmin
        required=True
      }}
      <label for="isAdmin" class="form-check-label">Admin Status</label>
    </div>
    <div class="form-group form-check">
      {{input
        type="checkbox"
        class="form-check-input"
        id="isUserManager"
        checked=model.isUserManager
        required=True
      }}
      <label for="isUserManager" class="form-check-label">User Manager Status</label>
    </div>
  </div>
  <button class="btn btn-primary" {{action "saveUser" model}}>Save Changes</button>
</div>
